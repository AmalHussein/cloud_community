<body>
	<div class="container">
		<div class="full-top-bar">
			<div class="username">USERNAME</div>
			<div class="audio-video-tabs">
				<a href="#" id="soundcloud">
					<div class="audio-tab">SOUNDCLOUD</div>
				</a>
				<a href="#" id="youtube">
					<div class="video-tab">VIDEO</div>
				</a>
			</div>
		</div>

		<div class="media-container">
			
			<!-- links and thumbnails displayed here -->
			<div class= "left-media-links">
				VIDEO & AUDIO LINKS HERE
				<div class="video-links">
					<%= render partial: 'video' , collection: @user.videos %>
				</div>
				<div class="audio-links">
					<%= render partial: 'song' , collection: @user.songs %>
				</div>
			</div>
			<div class="right-media-view">
				VIDEO & AUDIO STREAMING HERE
				<div class="media">
					<div id='iframe-container'></div>
				</div>
				<div id="comments">HELLO AJAX COMMENTS!</div>
			</div> 
		</div>
	</div>
</body>